build() {
  cd ffmpeg
  ./configure \
	--prefix=/usr \
	--disable-debug \
	--disable-static \
	--disable-everything \
	--disable-manpages \
	--disable-podpages \
	--disable-txtpages \
	--disable-htmlpages \
	--disable-filters \
	--disable-programs \
	--enable-shared \
	--enable-libzimg \
	--enable-zlib \
	--disable-autodetect \
	--disable-programs \
	--disable-doc \
	--disable-htmlpages \
	--disable-manpages \
	--disable-podpages \
	--disable-txtpages \
	--enable-network \
	--disable-xlib \
	--disable-cuda-llvm \
	--enable-demuxer=ac3,ass,dts,dtshd,dvbsub,dvbtxt,h264,matroska,mpegts \
	--enable-decoder=ass,aac,ac3,dca,dvbsub,dvdsub,h264,mp2,srt \
	--enable-muxer=ac3,ass,dts,dtshd,h264,matroska,mp2,mpegts,srt \
	--enable-parser=aac,ac3,dvbsub,dvdsub,h264,mpegaudio,png \
	--enable-protocol=cache,file \
	--enable-encoder=png
  make
}
package() {
  make DESTDIR="${pkgdir}" -C ffmpeg install
}
